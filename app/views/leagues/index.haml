%h1 Listing Leagues

%table.unstyled
  %thead
    %tr
      %th Name
      %th City
      %th State
      %th Description
      %th Active
      %th/

  - for league in @leagues
    %tbody
      %tr
        %td= link_to league.name, edit_league_path(league)
        %td=h league.city
        %td=h league.state
        %td=h league.description
        %td=h league.active
  
        %td= link_to 'Destroy', league_path(league), :confirm => 'Are you sure?', :method => :delete, :confirm => "Are you sure?", :method => :delete
   
= link_to 'New league', new_league_path 