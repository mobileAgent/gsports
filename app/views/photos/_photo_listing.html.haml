.listingItem
  .listingImage
    = link_to image_tag( photo_listing.public_filename(:thumb), :class => "polaroid"), user_photo_path(@user, photo_listing)
  .listingDescription
    %h4
      = h photo_listing.display_name
    .schoolName
      = photo_listing.created_at.to_s(:readable)
    .recentFriendFeed
      = truncate_words(h(photo_listing.description),35)
      %br/
      = photo_listing.tags.collect{|t| link_to( h(t.name), tag_url(t.name), :class => 'tag') }.join(" ")
  %ul.listingActions
    %li
      %a.genericButton{ :href => user_path( photo_listing.user )  }
        %span
          View Profile
    %li
      %a.genericButton{ :href => new_message_path(:to => photo_listing.user.id) }
        %span
          Send Message
    %li
      = render :partial => 'shared/favorite_item', :locals => { :item => photo_listing }
    - if current_user.id == photo_listing.user_id
      %li
        %a.genericButton{ :href => edit_user_photo_path(current_user,photo_listing) }
          %span
            Edit
      %li
        = link_to 'Destroy', user_photo_path(current_user,photo_listing), :confirm => 'Are you sure?', :method => :delete,  :class=>'genericButton'
  .clearDiv
.clearDiv