.hentry
  %h4.entry-title{:id=>"post_#{ message.id}"}
    = link_to message.title #, user_post_path(post.user, post), :rel => 'bookmark'

  .vcard.author
    %h5
      %a{:href=>"#{user_path(message.sender)}", :class=>"photo", :rel=>"bookmark"}
        =image_tag(message.sender.avatar_photo_url(:thumb), :alt=>"", :width=>"50", :height=>"50")

    %ul
      %li.fn=link_to "#{message.sender.full_name}", user_path(message.sender)
      %li.update
        %a{:href=>"#{user_post_path(message.sender, message)}", :rel=>"bookmark"}
          %abbr.published{:title=>"#{message.created_at}"}= message.sent_on_display("%B %d, %Y")

  .entry-content
    = message.body
    -#= truncate_words(message.body, 75, '...' )
    
    %h6=link_to 'Reply', new_message_path(:to => message.sender.id)