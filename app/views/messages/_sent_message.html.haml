- readonly ||= false
- if sent_message.from_id != current_user.id
  - message = Message.find(:first, :conditions => {:sent_message_id => sent_message.id, :to_id => current_user.id})

.mailDetail{:id => "message_#{sent_message.id}"}
  .mailPoster
    .mailPosterThumb
      %a{:href=>"#{user_path(sent_message.sender)}", :class=>"photo"}
        =image_tag(sent_message.sender.avatar_photo_url(:thumb), :alt=>"Profile Picture", :width=>"50", :height=>"50")
    .mailPosterName
      %br/
      = link_to sent_message.sender.full_name, user_path(sent_message.sender)
  .mailDetailContent

    .mailDetailActions
      - unless readonly
        - if message
          = link_to image_tag('/images/listing_icons/17/delete.png', :mouseclick => '/images/listing_icons/17/delete_ro.png', :border=>0, :alt => 'Delete', :title => 'Delete'), {:url => { :controller => 'messages', :action => 'destroy', :id => message}, :method => :delete, :confirm => 'Are you sure?'}, {:method => :delete, :confirm => 'Delete this post?', :class => 'listingButton'}
          = render :partial => 'shared/inappropriate_listing', :locals => {:item => message, :img => '/images/listing_icons/17/inappropriate.png', :img_ro => '/images/listing_icons/17/inappropriate_ro.png'}
          = link_to image_tag('/images/listing_icons/17/reply.png', :mouseclick => '/images/listing_icons/17/reply_ro.png', :border=>0, :alt => 'Reply', :title => 'Reply'), url_for({ :controller => 'messages', :action => 'new', :re_thread => sent_message.thread_id }), :class => 'listingButton'        

        - else
          -# todo: WHAT ACTIONS FOR A SENT MESSAGE?

    .mailDetailDate
      =human_date_time(sent_message.created_at)

    - if sent_message.is_thread_start()
      .mailDetailSubject
        =h(sent_message.message_thread.title)

      .mailDetailTo
        To:
        =h(sent_message.message_thread.recipient_display_array(current_user).join(', '))
    
    .clearDiv

    .mailDetailBody
      %div{ :onclick => "window.location='#{url_for(:action => :thread, :id => sent_message.thread_id)}'", :style => "cursor:pointer" }
        = render :partial => "message_body", :locals => {:message_body => sent_message, :msg_unread => message && message.unread?, :summary => true}

  .clearDiv
.clearDiv
