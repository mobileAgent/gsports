
=render :partial => 'base/homepage_banner_message'

#yui-main
  .yui-b
    .box.hfeed
      %h3 Games of the Week
      - v = GameOfTheWeek.find || []
      - game1 = v.shift
      - if game1 && game1.dockey
        = render :partial => 'shared/maverick_video_player', :locals  => { :dockey => game1.dockey }
        = game1.title
        %br/
        = game1.description
        %br/
        = "#{game1.team.name} - #{game1.team.league.name}"
        %br/
      - v.each do |video_asset|
        - case video_asset.class.to_s
          - when 'VideoAsset'
            = render :partial => 'video_assets/video_block', :locals => { :video_asset => video_asset }
          - when 'VideoClip'
            = render :partial => 'video_clips/video_block', :locals => { :video_clip => video_asset }
          - when 'VideoReel'
            = render :partial => 'video_reels/video_block', :locals => { :video_reel => video_asset }
        
.yui-b
  .box
    %h3= "Explore #{AppConfig.community_name}"
    %ul.list.checks
      - Category.find(:all).each do |c|
        %li= link_to c.name, category_path(c)
      %li= link_to "What's Popular", popular_url, {:class => 'popular'}
      %li= link_to "Find an Expert", skills_path, {:class => 'users'}

  .box.alt
    %h3
      What's Hot?
    %ul.list.page
      -#-@popular_posts.each do |post|
        =render :partial => 'posts/sidebar_post', :locals => {:post => post}
    %h6.all
      %a{:href=>"/popular"} SEE ALL

  .box.alt
    %h3= AppConfig.featured_writer_label.pluralize
    -#-@featured_writers.each do |user|
      =render :partial => "users/sidebar_user", :locals => {:user => user}

  .box.alt
    %h3 Active Users
    -#-@active_users.each do |user|    
      =render :partial => "users/sidebar_user", :locals => {:user => user}      