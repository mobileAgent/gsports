.profileContentArea
  .profilePageHeader
    %h2.columnDescriptor
      %span    
        =link_to _('MY REELS'), user_video_reels_path(current_user.id)
      Player
  .playerContentArea
    .leftNavColPlayer
      .leftNavPlayer
        = render :partial => 'ratings/stars', :locals => { :item => @video_reel }
        - if current_user.can_send_message_to?(@video_reel.user)
          %div
            %a.genericButton{ :href => new_message_path(:to => @video_reel.user.id, :title => "Your clip '#{@video_reel.title}'") }
              Send Message
            
        %div
          =link_to "Share", {:action => 'share', :id => @video_reel.id}, :class => 'genericButton'

        = render :partial => 'shared/favorite_item', :locals => { :item => @video_reel }

        - if current_user && current_user.can_edit?(@video_reel)
          %div
            %a.genericButton{ :href => edit_video_reel_path(@video_reel) }
              Edit
          %div
            = link_to 'Delete', video_reel_path(@video_reel), :confirm => 'Are you sure?', :method => :delete,  :class=>'genericButton'
        - else
          = render :partial => 'shared/inappropriate_item', :locals => { :item => @video_reel }
      
    .flashArea#flashArea
    - if @vidavee && session[:vidavee] && @video_reel.dockey    
      = render(:partial => 'shared/video_player', :locals => { :fvars => {:dockey => @video_reel.dockey}, :target => 'flashArea', :height => 635, :width => 800 })
    
    .clearDiv
    
    .commentContainer
      %br
      .commentArea
        .forumContentBox
          .commentForm
            =render :partial => 'comments/comment_form', :locals => { :commentable => @video_reel }
          .comments#comments
            #newest_comment
            =render :partial => 'comments/comment', :collection => @video_reel.comments
          %span#more_comments_links= more_comments_links(@video_reel)
