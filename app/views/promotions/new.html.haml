- @section = 'promotions'
- @page_title = _('NEW PROMOTION')

.forumContentArea
  .listingPage
    .profilePageHeader
      %h2.columnDescriptor
        %span
          = @page_title

  .leftNavCol
    %div{ :align => "center" }
      = link_to _('&laquo; back to promotion index'), promotions_path
    %br.clear
    %h2.yellowHeader
      My Profile
    .leftNav
      =render :partial => "users/profile_nav"    
  .listings
    .contentBox.tanBackground
      .contentBoxHeader.yellowHeader
        .boxDescription
          = _('Promotion Details')
      .contentBoxContent      
        - form_for :promotion, :url => promotions_path, :html => {:class => "MainForm"} do |f|
          = render :partial => "form", :object => f
          %p= submit_tag _('Create'), :or => link_to(_('Cancel'), promotions_path)