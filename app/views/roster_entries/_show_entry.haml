-row_name = "athlete-#{athlete.id}"
%tr{ :id=>row_name }
  %td
    .status
      -if athlete.user
        %img{ :src=>athlete.user.avatar_photo_url(), :width=>64, :height=>64 }
      -else
        %img{ :src=>'/images/pixel.gif', :width=>'64px', :height=>'64px' }
  %td
    .no
      -if athlete.number && !athlete.number.empty?
        = "##{h athlete.number}"
      &nbsp;
  %td
    .first
      = h athlete.firstname
      &nbsp;
  %td
    .last
      = h athlete.lastname
      &nbsp;
  %td
    .email
      = h athlete.email
      &nbsp;
  %td
    .phone
      = h athlete.phone
      &nbsp;
  %td
    .pos
      = h athlete.position
      &nbsp;
  %td
    .actions
      = link_to_remote '', {:url => roster_entry_path(athlete), :confirm => 'Are you sure?', :method=>:delete}, :complete => evaluate_remote_response, :class=>'delete-button'
      = link_to 'Edit', "javascript:gs.team_sports.edit_row('#{@team_sport.id}', '#{athlete.id}')"
      -#
        %br
        = link_to 'Add Parent', "javascript:gs.team_sports.edit_row('#{@team_sport.id}', '#{athlete.id}')"
      -#
        %br
        = link_to 'Send Email', new_messages_path(:to_id=>13) #"/messages/new?to_id=13"
        %br
        = link_to 'Send Text', "/messages/new_text?to_id=13"

