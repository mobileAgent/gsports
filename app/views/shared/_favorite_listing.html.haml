.favListing{ :id => "favorite_#{item.class.to_s}_#{item.id}" }
  -if Favorite.favorite?(current_user, item)
    = link_to_remote image_tag('/images/listing_icons/favorite.png', :mouseclick => '/images/listing_icons/favorite_down.png', :border=>0, :alt => 'Unfavorite', :title => 'Unfavorite'), {:url => {:controller => :favorites, :action => :remove, :favoritable_type => item.class.to_s, :favoritable_id => item.id}, :with=>"'listing=true'"}, :class => 'listingButton', :onmouseover => "window.status='Unfavorite item'; return true;", :onmouseout => "window.status=''; return true;"
  - else
    = link_to_remote image_tag('/images/listing_icons/favorite.png', :mouseclick => '/images/listing_icons/favorite_down.png', :border=>0, :alt => 'Mark as Favorite', :title => 'Mark as Favorite'), {:url => {:controller => :favorites, :action => :create, :favoritable_type => item.class.to_s, :favoritable_id => item.id }, :with=>"'listing=true'"}, :class => 'listingButton', :onmouseover => "window.status='Mark the item as a favorite'; return true;", :onmouseout => "window.status=''; return true;"
