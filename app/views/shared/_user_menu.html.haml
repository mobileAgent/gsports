="Logged in as #{link_to current_user.login, dashboard_user_path(current_user.id), :id => 'user-menu'}"
#user-menu-tip
  %ul
    %li= link_to('Admin', admin_dashboard_path) if current_user.admin?
  %hr
  %ul
    %li= link_to "dashboard", dashboard_user_path(current_user.id) 
    %li= link_to "Edit account", edit_account_user_path(current_user.id)          
    %li= link_to "View profile", user_path(current_user.id)
  %hr
  %ul
    %li= link_to 'Videos', url_for(:controller => 'search', :action => 'my_video_assets')
    %li= link_to 'Clips', url_for(:controller => 'search', :action => 'my_video_clips')
    %li= link_to 'Reels', url_for(:controller => 'search', :action => 'my_video_reels')
    %li= link_to 'Photos', user_photos_path(current_user.id)
    %li= link_to 'Friends', accepted_user_friendships_path(current_user.id)
    %li= link_to 'Blog', manage_user_posts_path(current_user.id)

%script{:type => "text/javascript"}
  :plain
    new Tip('user-menu', $('user-menu-tip'), {
      hook:{target: 'bottomRight', tip: 'topRight'},
      hideOn: false, 
      hideAfter: 1.5,  
      className: 'silver',
      offset: {y:2, x:12}
      });