.util
%form#login{ :action => sessions_path, :method => "post" }
  .headerHome
    %a.headerLink{ :href => '/' }
      %h1.headerBrand{:style => 'height: 100px; width: 625px; z-index: 105;'}
        ="#{AppConfig.community_name}"
    .loginBox
      %label{:for => "login"} USERNAME
      = text_field_tag 'login', nil, :class => 'loginFormInput'
      %br/
      %label{:for => "password"} PASSWORD
      %br/
      = password_field_tag 'password', nil, :class => 'loginFormPassword'
      %input#loginButton.submit{ :name => "submit", :src => "/gs/images/top_nav_login.gif", :type => "image", :value => "Login", :alt => "Login" }/
      %br/
      %span.loginHelp
        %a{ :href => url_for(:controller => 'users', :action => 'register')  }
          signup &raquo;
        |
        %a{ :href => forgot_password_path }
          password help &raquo;
    .clearDiv

.topNav
  %ul.leftTopNav
    %li
      %span#gnavAboutGlobalSports.ROLLOVERIMAGE
        %a{ :href => "/info/about" }
          %span
            About Global Sports
    %li.divider
      %span#gnavMembership.ROLLOVERIMAGE
        %a{ :href =>  '/info/membership' }
          %span
            Membership
    %li.divider
      %span#gnavRegistration.ROLLOVERIMAGE
        %a{ :href => url_for(:controller => 'users', :action => 'register')  }
          %span
            Registration
            
  - form_tag url_for({:controller => 'search', :action => 'teamfind'}), :method => :get, :id=>'teamFind', :class=>'rightTopNav' do
    %div
      %h2
        Search for My School
      %label.verbalSemantic{ :for => "searchState" }
        State
      =collection_select("teamfind","id",@quickfind_states,"id","name", {:prompt => "-State-", :selected => "-State-"}, {:id => 'searchState', :name => 'state'})
      %label.verbalSemantic{ :for => "searchCounty" }
        County
      =collection_select("teamfind","county_name",@quickfind_counties,"county_name","county_name",{:prompt => "-County-", :selected => "-County-"}, {:id => 'searchCounty', :name => 'county'})
      %label.verbalSemantic{ :for => "searchCity" }
        City
      =collection_select("teamfind","city",@quickfind_cities,"city","city",{:prompt => "-City-", :selected => "-City-"}, {:id => 'searchCity', :name => 'city'})
      -#%label.verbalSemantic{ :for => "searchSchool" }
        School
      %input.submit{ :name => nil, :type => "image", :src => "/gs/images/top_nav_search.gif", :value => "search", :alt => "Search" }/
      
      
      
      
      
      
      
      
