.AthletesWeek
  .featureFIT
    = image_tag(story.image_thumbnail_for_post, {:title => h(story.title), :alt => h(story.title), :height => '65', :width => '103', :class => 'AthletesPic'})
  .AthletesDescrip
    %p
      %strong
        =link_to(truncate(h(story.title),55), url_for({:controller => 'posts', :action => 'show_public', :id => story.id}))
        
    %p= "#{story.published_at.to_s(:readable)}"
  .athleteFIT
    = image_tag(story.logo_thumbnail_for_post, {:title => h(story.logo_title), :alt => h(story.logo_title), :class => 'AthletesLogo'})
