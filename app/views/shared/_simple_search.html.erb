<% form_tag({:controller => 'search', :action => 'sphinx_search'}, {:method => 'get'}) do %>
  <select name="search[category]">
    <option value="0">Category: All</option>        
  </select>   
  <%= text_field_tag 'search[keyword]', params[:search] && params[:search][:keyword] ? params[:search][:keyword] : 'by keywords...', :class => 'search_keywords', :onclick => "if ($(this).value == 'by keywords...') $(this).value = '';", :onblur => "if ($(this).value == '') $(this).value = 'by keywords...';"%>
<% end %>