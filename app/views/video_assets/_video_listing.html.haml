.listingItem{:id => "video_asset_#{video_listing.id}"}
  .listingImage
    = link_to "<img src='#{@vidavee.file_thumbnail_medium(video_listing.dockey)}' title='#{h(video_listing.title).gsub(/\'/,'')}' alt='Video'/>", video_asset_path(video_listing)
  .listingDescription
    %h4
      = h video_listing.title
    .schoolName
      = "#{h video_listing.league.name if video_listing.league}, #{h video_listing.team.title_name if video_listing.team}, #{h video_listing.sport}, #{video_listing.human_game_date_string}"
    .recentFriendFeed
      = truncate_words("#{h video_listing.description} - #{h video_listing.video_length}",35)
      %br/
      = video_listing.tags.collect{|t| link_to( h(t.name), tag_url(t.name), :class => 'tag') }.join(" ")
  - skip_controls ||= false
  %ul.listingActions
    - if video_listing.team
      %li
        %a.genericButton{ :href => team_path( video_listing.team_id )  }
          %span
            Team Profile
    - if video_listing.league && video_listing.team_id.nil?
      %li
        %a.genericButton{ :href => league_path( video_listing.league_id )  }
          %span
            League Profile
    %li
      = render :partial => 'shared/favorite_item', :locals => { :item => video_listing }

    - if current_user && current_user.can_edit?(video_listing)
      %li
        %a.genericButton{ :href => edit_video_asset_path(video_listing) }
          %span
            Edit
      %li
        = link_to_remote 'Destroy', {:url => url_for(video_listing), :confirm => 'Are you sure?', :method => :delete},  :class=>'genericButton'
      
  .clearDiv
.clearDiv