.profileContentArea.listingPage
  .profilePageHeader
    %h2.columnDescriptor
      %span
        = link_to _('MY VIDEOS'), url_for({:controller => 'search', :action => 'my_videos', :user_id => @user.id})        
      Player
  .playerContentArea
    .leftNavColPlayer
      .leftNavPlayer
        = render :partial => 'ratings/stars', :locals => { :item => @video_asset }
        = render :partial => 'shared/favorite_item', :locals => { :item => @video_asset }
        - if @video_asset.league_video?
          %div
            %a.genericButton{ :href => league_path( @video_asset.league_id )  }
              %span
                League Profile
        - else
          %div
            %a.genericButton{ :href => team_path( @video_asset.team_id )  }
              %span
                School Profile
            
        - if current_user && current_user.can_edit?(@video_asset)
          %div
            %a.genericButton{ :href => edit_video_asset_path(@video_asset) }
              Edit
          %div
            = link_to 'Delete', video_asset_path(@video_asset), :confirm => 'Are you sure?', :method => :delete,  :class=>'genericButton'
        
    .flashArea#flashArea
    - if @vidavee && session[:vidavee] && @video_asset.dockey
      = render(:partial => 'shared/video_player', :locals => { :fvars => {:dockey => @video_asset.dockey}, :target => 'flashArea', :height => 635, :width => 800 })
      
    .clearDiv
  
    .commentContainer
      %br
      .commentArea
        .forumContentBox
          .commentForm
            =render :partial => 'comments/comment_form', :locals => { :commentable => @video_asset }
          .comments#comments
            #newest_comment
            =render :partial => 'comments/comment', :collection => @video_asset.comments
          %span#more_comments_links= more_comments_links(@video_asset)

    
