- load_features(@team)
- avht = @team.avatar ? @team.avatar.height : 100
- top_row_height_px = @team_popular_videos.size >= 3 ? 255 : 130
- second_row_height_px = [@team_clips_reels.size,@team_videos.size].max >= 3 ? 255 : 130

.landingContentArea
  /
    col1 content
  .mainCol1
    .contentBox.orgSummary
    
      .contentBoxContent{:style => "height: #{top_row_height_px+18}px"}
        .contentBoxHeader
          - if current_user && (current_user.team_admin?(@team) || current_user.admin?)
            = link_to 'Edit', edit_team_path(@team), :class=>"edit-#{avht}"
          %h2
            =h @team.name
            
        - case avht
        - when 60
          = render :partial=>'contact_info', :locals=>{:avht=>avht}
          = render :partial=>'logo', :locals=>{:avht=>avht}
        - when 100
          %table
            %tr
              %td
                = render :partial=>'logo', :locals=>{:avht=>avht}
              %td
                = render :partial=>'contact_info', :locals=>{:avht=>avht}
    
        
    .contentBox.tanBackground
      .contentBoxHeader.yellowHeader
        %h2.boxDescription
          RECENT CLIPS & HIGHLIGHTS
      .contentBoxContent{:style => "height: #{second_row_height_px}px"}
        =render :partial => 'video_assets/video_feature', :collection => @team_clips_reels, :locals => {:nolinks => current_user.nil? }

  /
    col2 content
  .mainCol2
    .contentBox.tanBackground
      .contentBoxHeader.yellowHeader
        %h2.boxDescription
          MOST POPULAR VIDEOS
      .contentBoxContent{:style => "height: #{top_row_height_px}px"}
        =render :partial => 'video_assets/video_feature', :collection => @team_popular_videos, :locals => {:nolinks => current_user.nil? }

        - if @team_popular_videos.size >= 10
          - if current_user
            = link_to "More Videos...", url_for(:controller => 'search', :action => 'team_video_assets', :team_id => @team.id)
          - else
            = "More Videos available to members!"

    .contentBox.tanBackground
      .contentBoxHeader.yellowHeader
        %h2.boxDescription
          RECENT FULL GAME UPLOADS 
      .contentBoxContent{:style => "height: #{second_row_height_px}px"}
        =render :partial => 'video_assets/video_feature', :collection => @team_videos, :locals => {:nolinks => current_user.nil? }
        - if @team_videos.size >= 10
          - if current_user
            = link_to "More Videos...", url_for(:controller => 'search', :action => 'team_video_assets', :team_id => @team.id)
          - else
            = "More Videos available to members!"

      
          
  /
    col3 content
  .mainCol3  
    .rightContentItem
      - if current_user && current_user.team_staff?(@team)
        %span.moreLink
          = link_to 'Post', new_user_post_path(current_user)
      %h2
        = @team.nickname
        News
    - team_posts().each() do |post|
      .rightContentItem
        %span
          = link_to post.title, user_post_path(post.user, post), :rel => 'bookmark', :class=>'articleLink'
        %br
        = truncate_words(post.post, 24, '...' )


                
                
                
