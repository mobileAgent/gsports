.profileContentArea.listingPage
  .profilePageHeader
    %h2.columnDescriptor
      %span
        School Info
      = @team.name
  .leftNavCol
    %h2.yellowHeader
      = _('My Profile')
    .leftNav
      =render :partial => "users/profile_nav"
  .listings
    .listingItem
    
      %h1 Editing School Info
      
      = error_messages_for :team
      
      - form_for (@team, :url => team_url(@team), :html => {:method => 'put', :multipart => true}) do |f|
        = render :partial => "form", :locals => { :f => f }
        %p= f.submit "Update"
       
          
      = link_to 'Show', team_path(@team) | 
      = link_to 'Back', teams_path

