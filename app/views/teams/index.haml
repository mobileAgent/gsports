.profileContentArea.listingPage
  .profilePageHeader
    %h2.columnDescriptor
      %span
        Team Registry
      - if @league
        = " for #{@league.name}"
  .leftNavCol
    %h2.yellowHeader
      My Profile
    .leftNav
      =render :partial => "users/profile_nav"
  .listings
    .listingItem

      %table.unstyled
        %thead
          %tr
            %th Name
            %th City
            %th County
            %th State
            %th League
            %th Description
            %th Users
            %th/
      
        - for team in @teams
          %tbody
            %tr
            %td= link_to team.name, edit_team_path(team), {:title => "edit"}
            %td=h team.city
            %td=h team.county_name
            %td=h team.state_id? ? team.state.name : ""
            %td=h team.league_name
            %td=truncate h(team.description),45
            %td.numeric= team.users.count
        
            %td= link_to 'Delete', team_path(team), :confirm => 'Are you sure?', :method => :delete

      = link_to 'New team', url_for({:controller=>'teams',:action=>'new',:league_id=>@league.id})
