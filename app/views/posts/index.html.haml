- @section = 'blog'
- load_features()

.profileContentArea
  .profilePageHeader
    %h2.columnDescriptor
      %span
        BLOG
      = @user.full_name
      
  =render :partial => "users/profile_nav"

  .forumContainer
      
    .contentBox.tanBackground
      .contentBoxHeader.yellowHeader
        %h2.boxDescription
          = "#{@user.full_name}'s Posts"
      .contentBoxContent
        %h3
          = @category ? "&raquo; " + link_to(@category.name.upcase, users_posts_in_category_path(@user, @category.name)) : ''

        = link_to _('New post.'), new_user_post_path(@user), {:class => "genericButton"}  if @is_current_user
        %br
        
    .forumContentBox
      = render :partial => 'post', :collection => @posts

    - if @posts.respond_to?('total_pages') && @posts.total_pages > 1
      .apple_pagination
        = will_paginate @posts

