- load_features()

.profileContentArea
  .profilePageHeader
    %h2.columnDescriptor
      %span
        PROFILE
      = @user.full_name
      = " (( PRIVATE PROFILE )) " unless @user.profile_public?
  .leftNavCol
    %h2.yellowHeader
      My Profile
    .leftNav
      =render :partial => "users/profile_nav"

  .listings    
    .contentBox.tanBackground
      .contentBoxHeader.yellowHeader
        %h2.boxDescription
          = "#{@user.full_name}'s Posts"
      .contentBoxContent

        %h3
          = @category ? "&raquo; " + link_to(@category.name.upcase, users_posts_in_category_path(@user, @category.name)) : ''

        = link_to( 'New post.', new_user_post_path(@user), {:class => "right"})  if @is_current_user
        %br
        
    .forumContentBox
      .forumBoxHeader
        = render :partial => 'post', :collection => @posts

    - if @pages.length > 1
      .pagination
        = link_to "&laquo; Earlier posts", { :page => @pages.current.next } if @pages.current.next
        = link_to " | Later posts &raquo; ", { :page => @pages.current.previous } if @pages.current.previous

