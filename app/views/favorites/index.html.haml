.profileContentArea.listingPage
  .profilePageHeader
    %h2.columnDescriptor
      %span
        = @title || "MY FAVORITES"
      = "#{@user.full_name}" unless @title
  =render :partial => "users/profile_nav"

  .listings

    =render :partial => 'favorite', :collection => @favorites
        
    - if @favorites.respond_to?('total_pages') && @favorites.total_pages > 1
      .apple_pagination
        = will_paginate @favorites
        
        