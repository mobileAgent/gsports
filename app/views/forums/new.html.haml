- @section = 'forums'
- @page_title = _('NEW FORUM')

.forumContentArea
  .listingPage
    .profilePageHeader
      %h2.columnDescriptor
        %span
          = @page_title

  .leftNavCol
    %div{ :align => "center" }
      = link_to _('&laquo; back to forum index'), forum_home_path
    %br.clear
    %h2.yellowHeader
      My Profile
    .leftNav
      =render :partial => "users/profile_nav"    
  .listings
    .contentBox.tanBackground
      .contentBoxHeader.yellowHeader
        .boxDescription
          = _('Forum Details')
      .contentBoxContent      
        - form_for :forum, :url => forums_path, :html => {:class => "MainForm"} do |f|
          = render :partial => "form", :object => f
          %p= submit_tag _('Create'), :or => link_to(_('Cancel'), forums_path)

