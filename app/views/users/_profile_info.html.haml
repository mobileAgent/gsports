.contentBox.tanBackground
  .contentBoxHeader.yellowHeader
    %span.moreLink
      %a{ :href => "#", :onclick => "return profile_minimize(this)" }
        minimize -
    %h2.boxDescription
      Information
  .contentBoxContent
    .profileFeature
      .profileInfo
        %span.profileSubHeading Location:
        = "#{@user.city}, #{@user.state_id ? @user.state.name : ''}"
        %br/
        %span.profileSubHeading Team:
        =link_to "#{@user.team_name}", team_path(current_user.team)
        %br/
        %span.profileSubHeading League:
        =link_to "#{@user.league_name}", league_path(current_user.team)
        %br/
        %br/
        %h2.profileHeading Sports Played:
        - if @user.moniker_hash["sports"]
          %span.profileSubHeading= "#{@user.moniker_hash["sports"].join(', ')}"
        %br/
