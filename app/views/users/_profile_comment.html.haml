- comment = profile_comment

.profile_comment_delete{:style=>'float:right;'}
  -if ( comment.can_be_deleted_by(current_user) )
    .delete=link_to_remote("Delete", {:url => comment_path(comment.commentable_type, comment.commentable_id, comment), :method => :delete, 500 => 'alert(\'Sorry, there was a server error\'); return false',  :success => visual_effect(:fade, "comment_#{comment.id}"), :confirm => "Are you sure you want to permanently delete this comment"} )

%a{ :href => "" }
  = link_to image_tag(comment.user.avatar_photo_url(:thumb), :height => '50', :width => '50', :alt => "#{comment.user.login}"), user_path(comment.user), :rel => 'bookmark', :class => 'photo', :title => "#{comment.user.login}'s profile"
  = comment.user.full_name
  said...
%br/
%span.testimonial
  = comment.comment
