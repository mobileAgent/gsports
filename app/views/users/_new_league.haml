%hr
.section-head League Info
%br  
  
.field-block
  %label.required
    * League Name
  %br
  = text_field :league, :name 
  
  

%table
  %tr
    %td.field-block            
      %label.required{"for"=>"address1"} 
        Address Line One
      %br
      = text_field :league, :address1, :size => 16
    %td.field-block
      %label{"for"=>"address2"} 
        Address Line Two
      = text_field :league, :address2, :size => 16  


%table
  %tr
    %td.field-block            
      %label.required
        City
      %br
        = text_field :league, :city, :size => 16
    %td.field-block
      %label
        State
      %br
        =collection_select("league","state_id",State.all,"id","name",{ :prompt => 'State', :selected => @league.state_name })
    %td.field-block
      %label.required{"for"=>"zip"} 
        Zip/Postal Code
      %br
      = text_field :league, :zip, :size => 12

  
  
.field-block
  %label
    Description
  %br
  = text_field :league, :description, :size => 35

  
.field-block
  %label.required{"for"=>"phone"} 
    Phone
  %br
  = text_field :league, :phone, :size => 14
  
.field-block
  %label.required{"for"=>"email"}
    Contact E-mail address
  %br
  = text_field :league, :email, :size => 24
