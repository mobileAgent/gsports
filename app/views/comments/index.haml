- @section = 'forums'
- @page_title = (params[:sw] ? 'Sports Wall' : 'Comments')

.profileContentArea
  .listingPage
    .profilePageHeader
      %h2.columnDescriptor
        %span
          = @page_title
        = @user.full_name
    .leftNavCol
      %h2.yellowHeader
        My Profile
      .leftNav
        =render :partial => "users/profile_nav"    
    .listings
      %br
  
      .forumContentBox
        -# ECKMAN: This doesn't look good IMHO, so commenting out
          .forumBoxHeader
            .forumPost
              .forumPoster
                = render :partial => 'posts/author_profile', :locals => {:user => @user}
              .forumPostSummary
                %h3
                  =Inflector.humanize(@commentable.class).capitalize
                  Comments for
                  = link_to @title, @comments.first.generate_commentable_url(false)
              .clearDiv
            .clearDiv
          %div
            \&nbsp;
            %br/
  
        #comments
  
          %a#newest_comment
          = render :partial => 'comments/comment', :collection => @comments
  
          %h3  Add Your Comment
          %p= render :partial => 'comments/comment_form', :locals => {:commentable => @commentable}
          
  
        .clearDiv
      .clearDiv
  
  
    .clearDiv
  

